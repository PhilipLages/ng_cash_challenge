// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int @id @default(autoincrement())
  username  String @unique
  password  String
  accountId Int @unique

  account Account @relation(fields: [accountId], references: [id])

  @@map("Users")
}

model Account {
  id      Int  @id @default(autoincrement())
  balance Decimal @db.Decimal(10, 2)

  user     User?
  cash_out Transaction[] @relation("debited")
  cash_in  Transaction[] @relation("credited")

  @@map("Accounts")
}

model Transaction {
  id                Int   @id @default(autoincrement())
  debitedAccountId  Int
  creditedAccountId Int
  value             Decimal
  createdAt         DateTime @default(now())

  debited  Account @relation("debited", fields: [creditedAccountId], references: [id])
  credited Account @relation("credited", fields: [debitedAccountId], references: [id])

  @@map("Transactions")
}
